@if (_teacherRequest != null)
{
    <MudPaper Elevation="2" Class="email-paper">
        <div class="email-header">
            <div class="sender-info">
                <span class="sender-name">To: @_teacherRequest.SenderName</span><br />
                <span class="sender-email">(@_teacherRequest.RecieverRegistrationNum)</span>
            </div>
            <div class="subject-line">
                <span>Subject: Teacher Request </span><br />
                <span>Header: @GetTypeAsString(@_teacherRequest.Header)</span>
            </div>
        </div>
        <div class="email-content">
            <p>@_teacherRequest.Message</p>
        </div>
        <div class="reply-button">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="() => ViewModuleInformation(_teacherRequest.RecieverId)">
                Reply
            </MudButton>
        </div>
    </MudPaper>
}
else
{
    <p>Module offering information not found.</p>
}


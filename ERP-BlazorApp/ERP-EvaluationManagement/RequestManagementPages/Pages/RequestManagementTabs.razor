@using ERP_EvaluationManagement.RequestManagementPages.Components

<MudPopoverProvider></MudPopoverProvider>
<MudDialogProvider />
<MudSnackbarProvider />

<MudTabs Outlined="true" Rounded="true" Border="true"
         ApplyEffectsToContainer="true" PanelClass="pa-6" Color="Color.Primary">
    <MudTabPanel Text="Student Requests">
        <MudTabs Outlined="true" Rounded="true" Border="true"
                 ApplyEffectsToContainer="true" PanelClass="pa-6">

            <MudTabPanel Text="Incoming Requests">
                <MudGrid>
                    <MudItem xs="9">
                        <DisplayStudentRequests />
                    </MudItem>
                    <MudItem xs="2" Class="pt-5 mt-5">
                        <MudDatePicker PickerVariant="PickerVariant.Static" Rounded="true" Elevation="12" Date="DateTime.Today" />
                    </MudItem>
                </MudGrid>
            </MudTabPanel>
            <MudTabPanel Text="Outgoing Requests">
                <MudGrid>
                    <MudItem xs="9">
                        <DisplayTeacherRequests />
                    </MudItem>
                    <MudItem xs="2" Class="pt-5 mt-5">
                        <MudDatePicker PickerVariant="PickerVariant.Static" Rounded="true" Elevation="12" Date="DateTime.Today" />
                    </MudItem>
                </MudGrid>
            </MudTabPanel>
            <MudTabPanel Text="Make Request">
                <MudGrid>
                    <MudItem xs="9">
                        <MakeRequestComponent />
                    </MudItem>
                    <MudItem xs="2" Class="pt-5 mt-5">
                        <MudDatePicker PickerVariant="PickerVariant.Static" Rounded="true" Elevation="12" Date="DateTime.Today" />
                    </MudItem>
                </MudGrid>
            </MudTabPanel>
        </MudTabs>
    </MudTabPanel>
    <MudTabPanel Text="Staff Requests">
        <MudTabs Outlined="true" Rounded="true" Border="true"
                 ApplyEffectsToContainer="true" PanelClass="pa-6">

            <MudTabPanel Text="Incoming Requests">
                <MudGrid>
                    <MudItem xs="9">
                        <DisplayIncomingStaffRequests />
                    </MudItem>
                    <MudItem xs="2" Class="pt-5 mt-5">
                        <MudDatePicker PickerVariant="PickerVariant.Static" Rounded="true" Elevation="12" Date="DateTime.Today" />
                    </MudItem>
                </MudGrid>
            </MudTabPanel>
            <MudTabPanel Text="Outgoing Requests">
                <MudGrid>
                    <MudItem xs="9">
                        <DisplayOutgoingStaffRequests />
                    </MudItem>
                    <MudItem xs="2" Class="pt-5 mt-5">
                        <MudDatePicker PickerVariant="PickerVariant.Static" Rounded="true" Elevation="12" Date="DateTime.Today" />
                    </MudItem>
                </MudGrid>
            </MudTabPanel>
            <MudTabPanel Text="Make Request">
                <MudGrid>
                    <MudItem xs="9">
                        <MakeStaffRequestComponent />
                    </MudItem>
                    <MudItem xs="2" Class="pt-5 mt-5">
                        <MudDatePicker PickerVariant="PickerVariant.Static" Rounded="true" Elevation="12" Date="DateTime.Today" />
                    </MudItem>
                </MudGrid>
            </MudTabPanel>
        </MudTabs>
    </MudTabPanel>
</MudTabs>


